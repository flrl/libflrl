#define do_test_summary7_octile(ctype, ftype) do                            \
{                                                                           \
    const struct {                                                          \
        size_t n_values;                                                    \
        ctype  values[16];                                                  \
        int    expect_r;                                                    \
        double expect_quantiles[7];                                         \
    } tests[] = {                                                           \
        { 11, { 6, 7, 15, 36, 39, 40, 41, 42, 43, 47, 49 }, /* 4x + 3 */    \
          0, { 6, 6.5, 15, 40, 43, 48, 49 } },                              \
        { 11, { 15, 7, 43, 36, 42, 40, 41, 39, 6, 47, 49 }, /* unsorted */  \
          0, { 6, 6.5, 15, 40, 43, 48, 49 } },                              \
        { 9, { 13, 13, 14, 64, 68, 85, 91, 97, 127 }, /* 4x + 1 */          \
          0, { 13, 13, 13.5, 68, 94, 119.5, 127 } },                        \
        { 6, { 7, 15, 36, 39, 40, 41 }, /* 4x + 2 */                        \
          0, { 7, 7, 13, 37.5, 40.25, 41, 41 } },                           \
        { 4, { 6, 10, 17, 22 }, /* 4x + 0 */                                \
          0, { 6, 6, 7, 13.5, 20.75, 22, 22 } },                            \
        { 3, { 9, 20, 64 },                                                 \
          0, { 9, 9, 9, 20, 64, 64, 64 } },                                 \
        { 2, { 6, 9 },                                                      \
          0, { 6, 6, 6, 7.5, 9, 9, 9 } },                                   \
        { 2, { 9, 6 },                                                      \
          0, { 6, 6, 6, 7.5, 9, 9, 9 } },                                   \
        { 1, { 42 },                                                        \
          0, { 42, NAN, NAN, NAN, NAN, NAN, 42 } },                         \
        { 0, {},                                                            \
          0, { NAN, NAN, NAN, NAN, NAN, NAN, NAN } },                       \
    };                                                                      \
    const size_t n_tests = sizeof(tests) / sizeof(tests[0]);                \
    unsigned i;                                                             \
                                                                            \
    for (i = 0; i < n_tests; i++) {                                         \
        Summary7 actual_s7;                                                 \
        int q, r;                                                           \
                                                                            \
        r = summary7##ftype##v(&actual_s7,                                  \
                               tests[i].values, tests[i].n_values,          \
                               FENCE_OCTILE);                               \
                                                                            \
        assert_int_equal(r, tests[i].expect_r);                             \
        for (q = 0; q < 7; q++) {                                           \
            assert_float_equal(actual_s7.quantiles[q],                      \
                               tests[i].expect_quantiles[q],                \
                               FLT_EPSILON);                                \
        }                                                                   \
        assert_int_equal(FENCE_OCTILE, actual_s7.fence);                    \
    }                                                                       \
} while (0)

