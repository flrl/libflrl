static void fn_summary7_iqr15(NO_STATE)
{
    const struct {
        size_t n_values;
        double values[32];
        int expect_r;
        double expect_quantiles[7];
    } tests[] = {
        { 24, { 57, 57, 57, 58, 63, 66, 66, 67, 67, 68, 69, 70,
                70, 70, 70, 72, 73, 75, 75, 76, 76, 78, 79, 81 },
          0, { 57, 57, 66, 70, 75, 81, 81 } }, /* no outliers */
        { 24, { 52, 57, 57, 58, 63, 66, 66, 67, 67, 68, 69, 70,
                70, 70, 70, 72, 73, 75, 75, 76, 76, 78, 79, 89 },
          0, { 52, 57, 66, 70, 75, 79, 89 } }, /* outliers */
    };
    const size_t n_tests = sizeof(tests) / sizeof(tests[0]);
    unsigned i;

    for (i = 0; i < n_tests; i++) {
        Summary7 actual_s7;
        int q, r;

        r = summary7f64v(&actual_s7, tests[i].values, tests[i].n_values,
                         FENCE_IQR15);

        assert_int_equal(tests[i].expect_r, r);

        for (q = 0; q < 7; q++) {
            assert_float_equal(tests[i].expect_quantiles[q],
                               actual_s7.quantiles[q],
                               FLT_EPSILON);
        }

        assert_int_equal(FENCE_IQR15, actual_s7.fence);
    }
}

